rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Kullanıcı dokümanları
    match /users/{uid} {
      // Kullanıcı oluşturma: yeni kayıt olan herkes kendine doc açabilir
      allow create: if request.auth != null && request.auth.uid == uid;
      // Kendi hesabını okuma / güncelleme / silme
      allow read, update, delete: if request.auth != null && request.auth.uid == uid;
    }

    // Ürünler
    match /products/{id} {
      // Ürünleri herkes görebilir
      allow read: if true;
      // Ürün ekleme / düzenleme: sadece giriş yapmış hesaplar
      // (Gerçek admin kontrolünü biz JS tarafında yapıyoruz şimdilik)
      allow write: if request.auth != null;
    }

    // Diğer koleksiyonlar (şimdilik sadece okuma serbest)
    match /{document=**} {
      allow read: if true;
    }
  }
}
